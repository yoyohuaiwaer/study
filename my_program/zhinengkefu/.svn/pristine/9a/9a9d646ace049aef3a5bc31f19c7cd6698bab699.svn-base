function playOrPaused() {
	if(audio[0].paused) {
		audio[0].play();
		audioTimer = window.setInterval(audioProgress, 1000);
		playPause[0].setAttribute("src", "images/pause.png");
		return;
	}
	if(audioTimer){
		clearInterval(audioTimer);
	}
	audio[0].pause();
	playPause[0].setAttribute("src", "images/play.png");

}

